{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "AVR CPPDBG",
            "miDebuggerPath": "/usr/bin/avr-gdb",
            "miDebuggerServerAddress": "localhost:4242",
            "stopAtEntry": true,
            "program": "./target/avr-atmega1284p/debug/blink-led-1284.elf",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "gdb",
            "request": "attach",
            "name": "AVR GDB",
            "gdbpath": "/usr/bin/avr-gdb",
            "stopAtEntry": true,
            "executable": "./target/avr-atmega1284p/debug/blink-led-1284.elf",
            "target": ":4242",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "autorun": [
                "interrupt",
            ]
        }
    ]
}